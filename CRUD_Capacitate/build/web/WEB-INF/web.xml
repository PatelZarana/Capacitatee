<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>advertiser_insert</servlet-name>
        <servlet-class>com.advertiser.servlets.advertiser_insert</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>advertiser_retrieve</servlet-name>
        <servlet-class>com.advertiser.servlets.advertiser_retrieve</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>advertiser_update</servlet-name>
        <servlet-class>com.advertiser.servlets.advertiser_update</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>advertiser_delete</servlet-name>
        <servlet-class>com.advertiser.servlets.advertiser_delete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>advertiser_insert</servlet-name>
        <url-pattern>/advertiser_insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>advertiser_retrieve</servlet-name>
        <url-pattern>/advertiser_retrieve</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>advertiser_update</servlet-name>
        <url-pattern>/advertiser_update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>advertiser_delete</servlet-name>
        <url-pattern>/advertiser_delete</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
